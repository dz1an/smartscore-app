{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "nixpacksPlan": {
          "providers": ["python"],
          "phases": {
              "setup": {
                  "nixPkgs": ["...", "nodejs"]
              }
          }
      },
      "buildCommand": "npm ci"
    },
    "deploy": {
      "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn smartscoreapp.wsgi",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
}